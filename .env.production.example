# ===========================================
# CEPIC - Production Environment Variables
# ===========================================
# Copy this file to .env.production and fill in your values

# Database
DB_USER=cepic_user
DB_PASSWORD=your_secure_database_password_here

# JWT Secrets (generate with: openssl rand -base64 64)
JWT_SECRET=your_super_secret_jwt_key_minimum_64_characters_long_change_this_in_production
JWT_REFRESH_SECRET=your_refresh_secret_key_minimum_64_characters_long_change_this_also

# Security Secrets (generate with: openssl rand -base64 32)
CSRF_SECRET=your_csrf_secret_key_minimum_32_chars
COOKIE_SECRET=your_cookie_secret_key_minimum_32_chars

# URLs (update with your domain)
CLIENT_URL=https://your-domain.com
VITE_API_URL=https://your-domain.com/api

# Email Configuration (optional - emails logged to console if not set)
# For Gmail: Create an App Password at https://myaccount.google.com/apppasswords
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=qsoc fsla bnzq soiu 
EMAIL_FROM=noreply@cepic.ci

# CinetPay Configuration (optional for payments)
CINETPAY_API_KEY=your_api_key
CINETPAY_SITE_ID=your_site_id
CINETPAY_SECRET_KEY=your_secret_key
CINETPAY_MODE=SANDBOX
