// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(cuid())
  email       String   @unique
  password    String
  firstName   String
  lastName    String
  role        Role     @default(USER)
  isVerified  Boolean  @default(false)
  isActive    Boolean  @default(true)
  lastLogin   DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  sessions    Session[]
  twoFACodes  TwoFACode[]
  
  // Library relations
  uploadedBooks  LibraryBook[]
  bookmarks      LibraryBookmark[]
  reviews        LibraryReview[]
  downloads      LibraryDownload[]
  orders         Order[]

  @@map("users")
}

model Session {
  id          String   @id @default(cuid())
  userId      String
  token       String   @unique
  refreshToken String? @unique
  expiresAt   DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  isRevoked   Boolean  @default(false)
  
  // Device/Browser info for security
  userAgent   String?
  ipAddress   String?
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model TwoFACode {
  id          String   @id @default(cuid())
  userId      String
  code        String
  tempToken   String   @unique
  type        TwoFAType @default(LOGIN)
  expiresAt   DateTime
  isUsed      Boolean  @default(false)
  createdAt   DateTime @default(now())
  
  // Relations
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("two_fa_codes")
}


model LibraryCategory {
  id          String   @id @default(cuid())
  name        String   @unique
  description String?
  color       String?  @default("#3B82F6")
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  books       LibraryBook[]

  @@map("library_categories")
}

model LibraryBook {
  id          String   @id @default(cuid())
  title       String
  author      String
  isbn        String?  @unique
  description String?
  coverImage  String?
  fileUrl     String?
  fileType    FileType @default(PDF)
  fileSize    Int?     // in bytes
  pages       Int?
  language    String   @default("fr")
  publishedAt DateTime?
  isPublic    Boolean  @default(true)
  isAvailable Boolean  @default(true)
  downloads   Int      @default(0)
  views       Int      @default(0)
  rating      Float?   @default(0)
  tags        String[] @default([])
  price       Int      @default(0) // Price in cents (FCFA)
  originalPrice Int?   // Original price for discounts
  isFree      Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  // Relations
  categoryId  String
  category    LibraryCategory @relation(fields: [categoryId], references: [id])
  uploadedBy  String
  uploader    User            @relation(fields: [uploadedBy], references: [id])
  bookmarks   LibraryBookmark[]
  reviews     LibraryReview[]
  downloads_log LibraryDownload[]
  orderItems  OrderItem[]

  @@map("library_books")
}

model LibraryBookmark {
  id        String   @id @default(cuid())
  userId    String
  bookId    String
  createdAt DateTime @default(now())

  // Relations
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  book      LibraryBook @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@map("library_bookmarks")
}

model LibraryReview {
  id        String   @id @default(cuid())
  rating    Int      // 1-5 stars
  comment   String?
  isPublic  Boolean  @default(true)
  userId    String
  bookId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  book      LibraryBook @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@unique([userId, bookId])
  @@map("library_reviews")
}

model LibraryDownload {
  id          String   @id @default(cuid())
  userId      String
  bookId      String
  ipAddress   String?
  userAgent   String?
  downloadedAt DateTime @default(now())

  // Relations
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  book        LibraryBook @relation(fields: [bookId], references: [id], onDelete: Cascade)

  @@map("library_downloads")
}

model Order {
  id          String   @id @default(cuid())
  userId      String
  status      OrderStatus @default(PENDING)
  totalAmount Int      // Total price in cents (FCFA)
  currency    String   @default("XOF") // West African CFA franc
  paymentMethod String? // CARD, MOBILE_MONEY, BANK_TRANSFER
  paymentId   String?  // External payment reference
  paymentData Json?    // Store payment gateway response
  notes       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  paidAt      DateTime?
  
  // Relations
  user        User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items       OrderItem[]

  @@map("orders")
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  bookId      String
  quantity    Int      @default(1)
  unitPrice   Int      // Price at time of order in cents
  totalPrice  Int      // quantity * unitPrice
  
  // Relations
  order       Order       @relation(fields: [orderId], references: [id], onDelete: Cascade)
  book        LibraryBook @relation(fields: [bookId], references: [id])

  @@unique([orderId, bookId]) // Prevent duplicate books in same order
  @@map("order_items")
}

enum Role {
  USER
  ADMIN
  MODERATOR
}

enum TwoFAType {
  LOGIN
  REGISTRATION
  PASSWORD_RESET
}

enum FileType {
  PDF
  EPUB
  MOBI
  DOC
  DOCX
  TXT
  MP3
  MP4
  VIDEO
  IMAGE
}

enum OrderStatus {
  PENDING
  PROCESSING
  PAID
  COMPLETED
  CANCELLED
  FAILED
  REFUNDED
}