# Server Configuration
PORT=3001
NODE_ENV=development
CLIENT_URL=http://localhost:5173

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# Email Configuration (for 2FA)
# For development, emails will be logged to console
# For production, configure with real email service
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_app_password_or_console_only_for_dev

# Database (PostgreSQL)
# Replace with your actual database connection string
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# Security
# Generate strong random keys for production
CSRF_SECRET=your_csrf_secret_key_change_in_production
COOKIE_SECRET=your_cookie_secret_key_change_in_production